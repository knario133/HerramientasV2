<UserControl x:Class="HerramientasV2.FormularioGeneraServicioRestControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:toolkit="clr-namespace:Community.VisualStudio.Toolkit;assembly=Community.VisualStudio.Toolkit"
             toolkit:Themes.UseVsTheme="True"
             mc:Ignorable="d"
             d:DesignHeight="400"
             d:DesignWidth="600"
             Name="MyToolWindow">
    <Grid Margin="10">
        <!-- Definir estructura de filas -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Título -->
            <RowDefinition Height="Auto" />
            <!-- Clases Disponibles -->
            <RowDefinition Height="Auto" />
            <!-- Métodos Asociados -->
            <RowDefinition Height="*" />
            <!-- ListBox dinámico -->
            <RowDefinition Height="Auto" />
            <!-- Espaciado -->
            <RowDefinition Height="Auto" />
            <!-- Botones -->
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Generador de Handlers REST" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,10" />

        <!-- Clases Disponibles -->
        <Label Content="Clases Disponibles en el Proyecto" Grid.Row="1" Margin="0,0,0,5" />
        <ComboBox Name="LinqDisponibles" Grid.Row="2" Margin="0,0,0,10" SelectionChanged="LinqDisponibles_SelectionChanged" />

        <!-- Métodos Asociados -->
        <Label Content="Métodos Asociados a la Clase" Grid.Row="3" Margin="0,0,0,5" />
        <ListBox x:Name="Metodos" Grid.Row="4" Margin="0,0,0,10" ScrollViewer.VerticalScrollBarVisibility="Auto" Height="150">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Margin="5,0,0,0" Content="{Binding Content}" IsChecked="{Binding IsChecked, Mode=TwoWay}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Espaciador entre el ListBox y los botones -->
        <Rectangle Grid.Row="5" Height="10" Fill="Transparent" />

        <!-- Botones -->
        <StackPanel Orientation="Horizontal" Grid.Row="6" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Recargar Clases" Click="Button_Click" Width="150" Margin="0,0,20,0" />
            <Button Content="Generar Handlers REST" Click="Button_Click_1" Width="200" Margin="20,0,0,0" />
        </StackPanel>
    </Grid>
</UserControl>
