<UserControl x:Class="HerramientasV2.FormularioGeneraMetodosEnLinqControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:imaging="clr-namespace:Microsoft.VisualStudio.Imaging;assembly=Microsoft.VisualStudio.Imaging"
             xmlns:theming="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Imaging"
             xmlns:util="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Utilities"
             xmlns:catalog="clr-namespace:Microsoft.VisualStudio.Imaging;assembly=Microsoft.VisualStudio.ImageCatalog"
             xmlns:toolkit="clr-namespace:Community.VisualStudio.Toolkit;assembly=Community.VisualStudio.Toolkit"
             toolkit:Themes.UseVsTheme="True"
             mc:Ignorable="d"
             d:DesignWidth="900"
             Name="MyToolWindow" Height="628">
    <Grid Margin="10" RenderTransformOrigin="0.495,0.613">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Clases Linq Disponibles en el proyecto" Grid.Row="0"/>
        <ComboBox Name="LinqDisponibles" Margin="0,5,0,5" Grid.Row="1" SelectionChanged="LinqDisponibles_SelectionChanged"/>
        <Label Content="Cadenas de conexion Disponibles en el proyecto" Grid.Row="2"/>
        <ComboBox Name="CadenasDeConexion" Margin="0,5,0,5" Grid.Row="3" />


        <Label  Content="Métodos Asociados a Clase" Grid.Row="4"/>
        <ListBox x:Name="Metodos" Grid.Row="5" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Margin="5,0,0,0" Content="{Binding Content}" IsChecked="{Binding IsChecked, Mode=TwoWay}"/>
                        <Label Content="" Margin="5,0,0,0"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.Items>

            </ListBox.Items>
        </ListBox>

        <Label Content="Anexar Codigo Previo"   Grid.Row="6"/>
        <TextBox x:Name="TextoPrevio" Grid.Row="7" Height="120" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="False" ScrollViewer.VerticalScrollBarVisibility="Auto"/>


        <CheckBox Name="webmethod"  Content="Agregar WebMethods para Web Services" Grid.Row="8" />
        <CheckBox Name="webmethodSesion"  Content="Agregar WebMethods para Web Services con acceso a variable de sesion" Grid.Row="9" />
        <StackPanel Orientation="Horizontal" Grid.Row="11" HorizontalAlignment="Right">
            <Button Content="Recargar Clases" Click="Button_Click" Margin="0,10,10,10"/>
            <Button Content="Generar Nuevos Métodos y Clases de Encapsulamiento" Margin="0,10,0,10" Click="Button_Click_1"/>
        </StackPanel>
    </Grid>
</UserControl>
